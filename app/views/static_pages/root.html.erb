<script type="application/json" id="bootstrapped_current_user_json">
  <%= current_user.to_json.html_safe %>
</script>
<script type="application/json" id="bootstrapped_all_users_json">
  <%= @users.to_json.html_safe %>
</script>

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>

<% if !current_user %>
<div class="log-in-page">

    <div class="log-in-header"></div>
    <div class="log-in-form">
      <div class="log-in-form-title">LOG IN</div>
  
        <div class="guest-login">
        
        
          <form role="form" action="<%= session_url %>" method="post">
            <div class="form-group">
              <input
                name="authenticity_token"
                type="hidden"
                value="<%= form_authenticity_token %>">
            </div>
            <div class="form-group">
              <input 
                id="user_username"
                name="user[username]"
                value="guest"
                type="hidden">
            </div>
            <div class="form-group">
              <input
                id="user_password"
                name="user[password]"
                value="helloworld"
                type="hidden">
            </div>
            <div class="log-in-as-guest-button">
            <button type="submit" class="btn btn-success">Log In as Guest</button>
            </div>
          </form>
      
      </div>
      <br>
      <!-- <div class="login-page-separator">
        <div class="or-separator">- or -</div>
      </div> -->
        
      <div class="line-separator"></div>
      
      <br>
      <form role="form">
        <div class="form-group">
          <label for="exampleInputEmail1" class="log-in-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1" class="log-in-label">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="log-in-button">
        <button type="submit" class="btn btn-default">Log In</button>
        </div>
      </form>
    <br>
    <div class="footer">
      <div class="sign-up">Don't have an account? <a href="<%=new_session_url%>">Sign Up</a></div>
      
      
    </div>
    
    </div>

</div>  
  
  
  
<% else %>

  <div class="three-panes">
  
    <div class="content">
     
      <div class="sidebar"></div>
    
      
      <div class="not-sidebar">
        <div id="modal"></div>
        <div class="content-header"></div>
        <div class="pane content-left-pane">
          <div class="pane-header left-header"></div>
          <div class="not-header pane-left-not-header"></div>
        </div>
        <div class="pane content-right-pane">
          <div class="pane-header right-header"></div>
          <div class="not-header pane-right-not-header"></div>
        </div>
      </div>
    
    </div>
  </div>

<% end %>